<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_UI.Filter_Search_UI.commercial_filterSearch_frag">

    <RadioGroup
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:background="@drawable/spinner_design"
            android:drawableTop="@drawable/office"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/fui_transparent"
            android:text="Office"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_marginLeft="10dp"
            android:background="@drawable/spinner_design"
            android:textAlignment="center"
            android:drawableTop="@drawable/shop"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/fui_transparent"
            android:text="Shop"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_marginLeft="10dp"
            android:background="@drawable/spinner_design"
            android:drawableTop="@drawable/commercialapartment"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/fui_transparent"
            android:text="Apartment"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_marginLeft="10dp"
            android:background="@drawable/spinner_design"
            android:drawableTop="@drawable/plot"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/fui_transparent"
            android:text="Plot"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"/>




    </RadioGroup>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE RANGE (BDT)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:padding="5dp"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:background="@drawable/spinner_design"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <View
            android:layout_centerInParent="true"
            android:background="@drawable/up_arrow"
            android:layout_width="50dp"
            android:layout_height="20dp"/>
        <Spinner
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/spinner_design"/>

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="BED ROOMS"
        android:padding="5dp"
        android:textStyle="bold"/>
   <HorizontalScrollView
       android:fillViewport="true"
       android:layout_gravity="start"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">


           <RadioButton
               android:layout_marginLeft="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/stroke_shape_ractangle"
               android:gravity="center"
               android:padding="10dp"
               android:text="ALL"
               android:textSize="10sp"
               android:textStyle="bold" />

           <RadioButton
               android:layout_marginLeft="5dp"
               android:background="@drawable/stroke_shape_ractangle"
               android:textStyle="bold"
               android:text="1"
               android:textSize="10sp"
               android:padding="10dp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:gravity="center"/>

           <RadioButton
               android:layout_marginLeft="5dp"
               android:background="@drawable/stroke_shape_ractangle"
               android:textStyle="bold"
               android:text="2"
               android:textSize="10sp"
               android:padding="10dp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:gravity="center"/>

           <RadioButton
               android:layout_marginLeft="5dp"
               android:background="@drawable/stroke_shape_ractangle"
               android:textSize="10sp"
               android:padding="10dp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:textStyle="bold"
               android:text="3"
               android:gravity="center"/>


           <RadioButton
               android:layout_marginLeft="5dp"
               android:background="@drawable/stroke_shape_ractangle"
               android:textSize="10sp"
               android:padding="10dp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:textStyle="bold"
               android:text="4"
               android:gravity="center"/>

           <RadioButton
               android:layout_marginLeft="5dp"
               android:background="@drawable/stroke_shape_ractangle"
               android:textSize="10sp"
               android:padding="10dp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:textStyle="bold"
               android:text="5"
               android:gravity="center"/>

       </RadioGroup>

   </HorizontalScrollView>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AREA RANGE (SQUARE FEET)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:padding="5dp"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:background="@drawable/spinner_design"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <View
            android:layout_centerInParent="true"
            android:background="@drawable/up_arrow"
            android:layout_width="50dp"
            android:layout_height="20dp"/>
        <Spinner
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/spinner_design"/>

    </RelativeLayout>





</LinearLayout>

