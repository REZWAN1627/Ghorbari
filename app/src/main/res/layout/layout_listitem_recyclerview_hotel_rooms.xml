<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        app1:cardCornerRadius="10dp"
        app1:cardBackgroundColor="#808080"
        app1:cardMaxElevation="30dp"
        app1:cardElevation="30dp"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <LinearLayout
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/stroke_of_card"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/hotel_image">

            </ImageView>
            <TextView
                android:layout_gravity="center"
                android:padding="1dp"
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buj al Khalifa lite, Dhaka"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000">
            </TextView>
            <TextView
                android:id="@+id/hotel_address"
                android:layout_gravity="center"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/hotel_rent"
                android:padding="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="TK 7,062/ Night">

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>