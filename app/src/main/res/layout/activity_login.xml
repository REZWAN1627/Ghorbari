<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.Login_page">

      <TextView
          android:id="@+id/ghor_txt"
          android:layout_marginTop="40dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="Ghor Bari"
          android:textSize="50sp"
          android:textStyle="bold"
          android:textColor="#E60A0A">

      </TextView>
      <TextView
          android:id="@+id/ghor2_txt"
          android:layout_marginTop="30dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ghor_txt"
          android:layout_centerHorizontal="true"
          android:text="Ghor Khujun Ghorei Boshei"
          android:textSize="30dp"
          android:textStyle="bold"
          android:textColor="#EF0404">

      </TextView>
    <LinearLayout
        android:layout_below="@+id/ghor2_txt"
        android:orientation="vertical"
        android:background="@drawable/log_in_page_degin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnknownId">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:id="@+id/log_btn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_button_log_in"
                android:text="LOG In"
                android:textSize="25sp"
                android:textStyle="bold">

            </Button>
            <Button
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/sign_up_btn_page"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_button_log_in"
                android:text="Sign UP"
                android:textSize="25sp"
                android:textStyle="bold">

            </Button>
            <Button
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/guest_log_in_btn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_button_log_in"
                android:text="Guest Log In"
                android:textSize="25sp"
                android:textStyle="bold">

            </Button>
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_image"
                android:layout_width="133dp"
                android:layout_height="127dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:src="@drawable/bdland"
                app:civ_border_color="#E80505"
                app:civ_border_width="2dp" />



        </LinearLayout>

    </LinearLayout>

