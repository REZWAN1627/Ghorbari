<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F00"
        android:id="@+id/ghorbari_toolbar">
        <TextView
            android:id="@+id/text202"
            android:layout_marginLeft="80dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GhorBari"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#FFFFFF">

        </TextView>
        <Button
            android:id="@+id/logout_btn"
            android:layout_marginLeft="65dp"
            android:background="@drawable/exit_of_actionbar"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/ghorbari_toolbar"
        android:orientation="vertical"
        android:background="#FF00">
        <EditText
            android:padding="10dp"
            android:drawableStart="@drawable/search"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="Enter city name, Location..."
            android:background="@drawable/search_feild"
            android:drawableLeft="@drawable/search">

        </EditText>
    </LinearLayout>



</RelativeLayout>