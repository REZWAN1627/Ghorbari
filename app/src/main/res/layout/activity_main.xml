<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/khela_suru"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/start_up_page_btn"
        android:text="Start"
        android:textSize="15sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="133dp"
        android:layout_height="127dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/bdland"
        app:civ_border_color="#0AA64C"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/ghor_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Ghor Bari"
        android:textColor="#E60A0A"
        android:textSize="50dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/ghor2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ghor_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Ghor Khujun Ghorei Boshei"
        android:textColor="#EF0404"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

</RelativeLayout>