<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.SignUp_New_Members_BDLand">

    <TextView
        android:id="@+id/txt_signuutoghorbari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Sign Up to GhorBari"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

    </TextView>

    <ScrollView
        android:id="@+id/layer11"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signuutoghorbari">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/user_Fname"
                android:drawableEnd="@drawable/name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="First Name"
                android:layout_gravity="center"
                android:background="@drawable/stroke_shape_ractangle"
                android:padding="10dp"
                android:drawableRight="@drawable/name">
            </EditText>
            <EditText
                android:id="@+id/user_Sname"
                android:drawableEnd="@drawable/name"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:layout_gravity="center"
                android:background="@drawable/stroke_shape_ractangle"
                android:padding="10dp"
                android:drawableRight="@drawable/name">
            </EditText>
            <EditText
                android:id="@+id/user_email"
                android:drawableEnd="@drawable/mail"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Email"
                android:layout_gravity="center"
                android:background="@drawable/stroke_shape_ractangle"
                android:padding="10dp"
                android:drawableRight="@drawable/mail">
            </EditText>


            <EditText
                android:id="@+id/user_pass"
                android:drawableEnd="@drawable/pass"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:background="@drawable/stroke_shape_ractangle"
                android:padding="10dp"
                android:drawableRight="@drawable/pass">
            </EditText>
            <EditText
                android:id="@+id/user_pass_again"
                android:drawableEnd="@drawable/pass"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Re-type password"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:background="@drawable/stroke_shape_ractangle"
                android:padding="10dp"
                android:drawableRight="@drawable/pass">
            </EditText>
            <Button
                android:id="@+id/user_SignUp_btn"
                android:background="@drawable/continue_in2nd_acivity_btn"
                android:layout_marginTop="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign up"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF">

            </Button>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:visibility="invisible"></ProgressBar>

            <TextView
                android:layout_marginTop="80dp"
                android:id="@+id/create_account_text"
                android:text="Have an account? Sign In"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>




    </ScrollView>








</RelativeLayout>

